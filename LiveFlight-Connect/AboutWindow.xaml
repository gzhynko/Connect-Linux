<Window x:Class="LiveFlight.AboutWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About" Height="370" Width="325" CanResize="False" Icon="LiveFlight.ico" Opened="Window_Loaded">
    <Grid>
        <TextBlock x:Name="label" Text="LiveFlight Connect&#xD;&#xA;" TextAlignment="Center"
               HorizontalAlignment="Left" Margin="80,55,0,240" VerticalAlignment="Center" FontWeight="Bold" Width="160"
               FontSize="17.333" Height="46" />
        <Button x:Name="cameronButton" Content="Cameron Carmichael Alonso" HorizontalAlignment="Left"
                Margin="10,165,0,0" VerticalAlignment="Top" Width="169" Click="cameronButton_Click" />
        <Button x:Name="arButton" Content="AR__AR" HorizontalAlignment="Left" Margin="10,190,0,0"
                VerticalAlignment="Top" Width="169" Click="arButton_Click" />
        <TextBlock x:Name="label1" Text="Credits" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" />
        <TextBlock x:Name="label1_Copy" Text="Links" HorizontalAlignment="Left" Margin="10,220,0,0"
                   VerticalAlignment="Top" />
        <Button x:Name="licenseButton" Content="License (GPL V3)" HorizontalAlignment="Left" Margin="10,251,0,0"
                VerticalAlignment="Top" Width="169" Click="licenseButton_Click" />
        <Button x:Name="sourceCode" Content="Source (GitHub)" HorizontalAlignment="Left" Margin="10,276,0,0"
                VerticalAlignment="Top" Width="169" Click="sourceCode_Click" />
        <Button x:Name="liveFlightLink" Content="LiveFlight" HorizontalAlignment="Left" Margin="10,301,0,0"
                VerticalAlignment="Top" Width="169" Click="liveFlightLink_Click" />
        <TextBlock x:Name="version" Text="" HorizontalAlignment="Left" Margin="126,83,0,0" VerticalAlignment="Top"
                   Width="68" />


    </Grid>
</Window>